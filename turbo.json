{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["NEXT_PUBLIC_OPENCLOUD_SERVER_URL"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "typecheck": {
            "outputs": []
        },
        "start": {
            "dependsOn": ["build"]
        }
    }
}
